.photo {
    padding: 20rpx 20rpx 10rpx;
}

.photo image {
    width: 100%;
}

.introduction {
    background-color: transparent;
    padding: 20rpx 30rpx;
    border-radius: 0;
    box-shadow: 0 6rpx 10rpx 2rpx #f2f2f2;
}

.publictitle {
    display: flex;
    justify-content: space-between;
    height: 80rpx;
}

.publictitle .txt {
    font-size: 35rpx;
    font-weight: 700;
}

.publictitle .txt,.publictitle .txt1 {
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}

.publictitle .txt1 {
    font-size: 30rpx;
    font-weight: 500;
}

.publictitle .txt2 {
    font-size: 25rpx;
    font-weight: 300;
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}

.line {
    width: 100%;
    height: 2rpx;
    background-color: #f2f2f2;
    margin: 10rpx 0 20rpx;
}

.button {
    width: 100%;
    display: flex;
    justify-content: space-between;
    padding: 30rpx 80rpx;
    box-sizing: border-box;
}

.button,.touch {
    background-color: transparent;
}

.touch {
    width: 35%;
    border-radius: 0;
    box-shadow: 0 6rpx 10rpx 2rpx #f2f2f2;
}

.touch .pic {
    width: 100%;
    height: 100%;
}